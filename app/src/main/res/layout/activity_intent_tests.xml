<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intent_tests_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oleg.startandroidtests.view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIntentTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MainTextStyle"
            android:text="Send EMAIL"/>

        <TextView
            android:id="@+id/tvIntentTest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MainTextStyle"
            android:text="Open dialer"/>

        <TextView
            android:id="@+id/tvIntentTest4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MainTextStyle"
            android:text="Call"/>

        <TextView
            android:id="@+id/tvIntentTest5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MainTextStyle"
            android:text="Open Map"/>


        <TextView
            android:id="@+id/tvIntentTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MainTextStyle"
            android:text="StartActivityForResult"/>

    </LinearLayout>
</ScrollView>
