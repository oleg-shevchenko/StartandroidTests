<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--custom app or activity theme, use in manifest-->
    <color name="custom_theme_color">#b0b0ff</color>
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
    </style>

    <style name="L113Theme" parent="CustomTheme">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!--Наследуемся от глобального стиля-->
    <style name="MainTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--Наследуемся от нашего стиля для изменения свойств-->
    <style name="MainTextStyle.Big" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
    </style>

    <!--Наследуемся от глобального стиля-->
    <style name="CustomEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>




</resources>
