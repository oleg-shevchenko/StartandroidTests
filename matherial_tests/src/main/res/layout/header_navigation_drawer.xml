<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/navigation_drawer_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivDrawerHeader"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#80757575"
        android:src="@drawable/my_photo"/>

    <TextView
        android:id="@+id/tvDrawerHeaderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Oleg Shevchenko"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tvDrawerHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="oleg.sh.vi@gmail.com" />

</LinearLayout>